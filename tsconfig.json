{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "noUncheckedIndexedAccess": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": [
      // add vitest utils to global
      "vitest/globals"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["bazel-*/**/*"],
}
